<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tk.yurkiv.recipes" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ui.activities.FragmentHolderActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.RecipeActivity">
        </activity>
        <activity
            android:name=".ui.activities.CategoryActivity"
            android:theme="@style/ViewPagerTheme">
        </activity>
        <activity
            android:name=".ui.activities.BaseActivity">
        </activity>
    </application>

</manifest>
